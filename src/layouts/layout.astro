---
import "../styles/default.css";
import "../styles/splide.min.css";

import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Meta from "../components/meta.astro";
import Spnav from "../components/spnav.astro";
import NavButton from "../components/navButton.astro";
import PcHero from "../components/pcHero.astro";

const props = Astro.props;
---

<html lang="ja">
  <head>
    <Meta {...props} />
  </head>
  <body class="bg-[#f2b174] flex flex-col items-center lg:items-end">
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-KWMTC8JP"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- Meta Pixel Code -->
    <script>
      !(function (f, b, e, v, n, t, s) {
        if (f.fbq) return;
        n = f.fbq = function () {
          n.callMethod
            ? n.callMethod.apply(n, arguments)
            : n.queue.push(arguments);
        };
        if (!f._fbq) f._fbq = n;
        n.push = n;
        n.loaded = !0;
        n.version = "2.0";
        n.queue = [];
        t = b.createElement(e);
        t.async = !0;
        t.src = v;
        s = b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t, s);
      })(
        window,
        document,
        "script",
        "https://connect.facebook.net/en_US/fbevents.js"
      );
      fbq("init", "9596150607076125");
      fbq("track", "PageView");
    </script>
    <noscript
      ><img
        height="1"
        width="1"
        style="display:none"
        src="https://www.facebook.com/tr?id=9596150607076125&ev=PageView&noscript=1"
      /></noscript
    >
    <!-- End Meta Pixel Code -->
    <!-- End Google Tag Manager (noscript) -->
    <NavButton />
    <div
      class="mainContent max-w-[500px] w-full relative bg-white overflow-hidden z-[0]"
    >
      <Header {...props} />
      <Spnav />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
    <PcHero />

    <script src="/js/splide.min.js" defer></script>
    <script src="/js/main.js" defer></script>
  </body><script>
    document.addEventListener("DOMContentLoaded", function () {
      document.querySelectorAll("a").forEach(function (link) {
        if (
          link.href.includes("lin.ee") ||
          link.href.includes("forms.gle") ||
          link.href.includes("instagram.com") ||
          link.href.startsWith("tel:")
        ) {
          link.addEventListener("click", function () {
            gtag("event", "conversion", {
              send_to: "AW-764915090/A86gCKun5OYZEJLb3uwC",
              value: 1.0,
              currency: "JPY",
            });
          });
        }
      });
    });
  </script>
</html>
