---
import Container from "../container.astro";
import { Image } from "astro:assets";
import Ttl from "../util/ttl.astro";
import product01 from "/src/images/top/product-01.jpg";
import product02 from "/src/images/top/product-02.jpg";
import product03 from "/src/images/top/product-03.jpg";
import product04 from "/src/images/top/product-04.jpg";
import product05 from "/src/images/top/product-05.jpg";
import product06 from "/src/images/top/product-06.jpg";
import product07 from "/src/images/top/product-07.jpg";
import product08 from "/src/images/top/product-08.jpg";
import product09 from "/src/images/top/product-09.jpg";
import product10 from "/src/images/top/product-10.jpg";
import product11 from "/src/images/top/product-11.jpg";
import ai01 from "/src/images/top/ai_01.png";
import ai02 from "/src/images/top/ai_02.png";
import ai03 from "/src/images/top/ai_03.png";
import ai04 from "/src/images/top/ai_04.png";
import ai05 from "/src/images/top/ai_05.png";
import ai06 from "/src/images/top/ai_06.png";
