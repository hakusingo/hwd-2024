---
import Container from '../container.astro';
import { Image } from "astro:assets";
import Ttl from '../util/ttl.astro';

const services = [
    {
        title: `ワンオーシャン様\n公式ウェブサイト`,
        image: "/src/images/top/product-01.jpg",
        alt: "ワンオーシャン様 ウェブサイト",
        description: "アドベンチャーツアーを行っているOneOcean様のウェブサイトを作成。大人から子供まで楽しめる元気な感じのブルーをテーマカラーに作成しました。"
    },
    {
        title: "ヤマシロ鍼灸整骨院様\n公式ウェブサイト",
        image: "/src/images/top/product-02.jpg",
        alt: "ヤマシロ鍼灸整骨院様 ウェブサイト",
        description: "親しみやすく使いやすいデザイン、SEOを意識した治療や施術に関する豊富な記事を作成し、お客様に安心してご覧いただけるサイトに仕上げました。"
    },
    {
        title: "宮城カズトシ様\n二つ折りパフレット",
        image: "/src/images/top/product-03.jpg",
        alt: "アプリ/システム構築",
        description: "一目見て宮城様とわかるような、カラー構成と読みやすく飽きの来ないようにイラストや写真を使用しました。宮城様の活動とうるま市への想いが読者に届くように作成しました。"
    },
    {
        title: "AIコンテンツ制作",
        image: "/src/images/top/product-04.jpg",
        alt: "AIコンテンツ制作",
        description: "AI技術を活用して文章やイラストを作成いたします。生成AIを使ったコンテンツ制作から、その活用方法のアドバイスまで幅広くサポートします。このサイトでは、AIを活用して構成から文章作成、画像の生成まで行っているAIブログです。",
        linkText: "AIブログへ",
        url: "https://aiblog.haku-design.net/"
    }
];
---

<Container cls="bg-pink pb-[120px]">
    <Ttl ttl="制作事例" mt="pt-[100px]" />
    <div class="flex flex-col gap-y-[32px] relative pb-[240px]">
        {services.map((service) => (
            <div>
                <h3 class="text-[22px] font-[700] inline-block pr-[.5em] mb-[12px]">{service.title}</h3>
                <Image
                    class="px-[24px] mb-[16px]"
                    src={service.image}
                    alt={service.alt}
                    width={824}
                    height={463}
                />
                <p class="px-[32px] tracking-[0.1em]">{service.description}</p>
                {service.linkText && service.url && (
                    <a href={service.url} class="block mt-[24px] bg-white p-[4px] text-center border-[4px] border-[black] max-w-[300px] mx-auto" target="_blank" rel="noopener">
                        {service.linkText}
                    </a>
                )}
            </div>
        ))}
        <img
            class="absolute top-[-200px] left-[-100px] z-[20]"
            src="/images/common/circle-top.svg"
            alt="circle"
        />
        <img
            class="absolute top-[40%] right-[-100px] z-[-1]"
            src="/images/common/circle-mid.svg"
            alt="circle"
        />
        <img
            class="absolute bottom-[30%] left-[-72px] z-[-1]"
            src="/images/common/circle-bottom.svg"
            alt="circle"
        />
        <img
            class="absolute target fade-in-right bottom-[-100px] w-[160px] z-30 right-[30px]"
            src="/images/top/dan.png"
            alt="シュートメン"
            width="140"
        />
        <img
            class="absolute z-[20] bottom-[-144px] right-[-24px] left-[-24px] w-[100vw] max-w-[500px]"
            src="/images/common/under-curve.svg"
            alt="circle"
        />
    </div>
</Container>

<style>
    h3 {
        text-decoration: underline;
        text-decoration-thickness: 4px;
        text-decoration-color: #1c1c1d;
        text-underline-offset: 6px;
        text-decoration-skip-ink: none;
        white-space: pre-wrap;
        text-indent: -2.4em;
        padding-left: 2.4em;
        line-height: 1.6;
    }

</style>