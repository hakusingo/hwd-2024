---
import Container from '../container.astro';
import Ttl from '../util/ttl.astro';
import { Image } from "astro:assets";
import product01 from "/src/images/top/service_01.png";
import product02 from "/src/images/top/service_02.png";
import product03 from "/src/images/top/service_03.png";
import product04 from "/src/images/top/service_04.png";
import product05 from "/src/images/top/service_05.png";

const services = [
    {
        title: "ホームページ制作",
        image: product01,
        alt: "ホームページ制作",
        description: "お客様の職種や目的、ご予算などのニーズに合わせ、魅力的で使いやすいホームページを制作いたします。SEOやMEO対策を施し、アナリティクスの導入と定期的なレポート提出も可能です。サイト管理等も含め、トータルサポートを提供いたします。"
    },
    {
        title: "DTP(名刺・チラシ等)",
        image: product02,
        alt: "DTP(名刺・チラシ等)",
        description: "名刺やチラシなど、お客様のブランドイメージに合わせた印刷物をデザインいたします。目的やご予算に応じて、効果的で視覚的に魅力的なデザインをご提案。印刷手配も含め、スムーズなプロセスでお届けします。"
    },
    {
        title: "アプリ/システム構築",
        image: product03,
        alt: "アプリ/システム構築",
        description: "ReactやLaravelを使用したアプリ開発、Googleスプレッドシートやエクセルを活用したシステム構築を行います。業務効率化や顧客管理など、様々なニーズに対応したソリューションを提供します。"
    },
    {
        title: "AIコンテンツ制作",
        image: product04,
        alt: "AIコンテンツ制作",
        description: "AI技術を活用して文章やイラストを作成いたします。生成AIを使ったコンテンツ制作から、その活用方法のアドバイスまで幅広くサポートします。このセクションの画像も生成AIで作成しています。"
    },
    {
        title: "動画制作",
        image: product05,
        alt: "動画制作画像",
        description: "SNSやウェブサイトに最適なショート動画を制作いたします。短い時間で効果的に伝わるよう、お客様のブランドやメッセージに合わせた映像をデザイン。ナレーションや字幕、BGMの追加も可能で、視覚的なインパクトを強めます。"
    }
];
---

<Container >
    <div class="relative" id="service">
        <h3 class="about target pt-[80px] relative font-m font-[700] text-[24px] text-center mb-[24px]">“ハクウェブデザインって？“</h3>
        <p class="text-center flex flex-col gap-y-[4px] relative z-20">
            <span class="inline-block">「ハクウェブデザイン」は</span>
            <span class="inline-block">沖縄県うるま市を拠点に、</span>
            <span class="inline-block">ウェブサイトの制作や管理、</span>
            <span class="inline-block">名刺やチラシなどの印刷物デザイン、</span>
            <span class="inline-block">SNS運用代行、ショート動画制作、</span>
            <span class="inline-block">AIコンテンツ作成サポートを</span>
            <span class="inline-block">提供しているウェブ屋さんです。</span>
        </p>
        <img
            src="/images/top/faru.png"
            class="target fade-in-right absolute bottom-[0px] left-[-60px] z-[10] w-[120px] lg:left-[-30px]"
            alt="ファルコさん"
            width="120"
        >
        <img
            src="/images/top/riba.png"
            class="target fade-in-left absolute bottom-[0px] right-[-60px] z-[10] w-[130px] lg:right-[-30px]"
            alt="リバオー"
            width="130"
        >
    </div>
    <Ttl ttl="サービス" mt="mt-[120px]" />
    <div class="flex flex-col gap-y-[32px] relative pb-[240px]">
        {services.map((service) => (
            <div class="max-w-[400px] mx-auto">
                <h3 class="h3 text-[24px] font-[700] inline-block pr-[.5em] mb-[12px]">{service.title}</h3>
                <Image class="target px-[24px] mb-[16px]" src={service.image} alt={service.alt} />
                <p class="px-[16px] tracking-[0.1em]">{service.description}</p>
            </div>
        ))}
        <img
            class="absolute top-[-600px] left-[-100px] z-[20]"
            src="/images/common/circle-top.svg"
            alt="circle"
        />
        <img
            class="absolute top-[10%] right-[-100px] z-[-1]"
            src="/images/common/circle-mid.svg"
            alt="circle"
        />
        <img
            class="absolute bottom-[30%] left-[-72px] z-[-1]"
            src="/images/common/circle-bottom.svg"
            alt="circle"
        />
        <img
            class="absolute target fade-in-bottom bottom-[20px] w-[160px] z-30 right-[0]"
            src="/images/top/shuto.png"
            alt="シュートメン"
            width="140"
        />
        <img
            class="underCircle absolute z-[20] bottom-0 right-[-24px] left-[-24px] w-[100vw] max-w-[500px]"
            src="/images/common/under-curve-pink.svg"
            alt="circle"
        />
    </div>
</Container>

<style>
    .about::before {
        content: "";
        display: block;
        position: absolute;
        height: 10px;
        width: 300px;
        background-color: #B2EDFF;
        opacity: 0.8;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        z-index: -1;
    }
    .h3 {
        background: linear-gradient(transparent 70%, #B2EDFF 50%);
    }
    .h3::before {
        content: "・";
    }
</style>